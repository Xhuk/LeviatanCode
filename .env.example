# LeviatanCode Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For local development with Supabase:
# 1. Create a Supabase project at https://supabase.com/dashboard
# 2. Go to Settings > Database > Connection string
# 3. Copy the URI from "Connection string" -> "Transaction pooler"
# 4. Replace [YOUR-PASSWORD] with your database password
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[project-ref].supabase.co:6543/postgres?sslmode=require

# Alternative: Local PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/leviatancode_dev

# ============================================================================
# AI SERVICES
# ============================================================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini API Key - Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=5000

# Session security (change in production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760
# Maximum number of files per upload
MAX_FILES=50

# ============================================================================
# RATE LIMITING
# ============================================================================
# API rate limit (requests per 15 minutes)
RATE_LIMIT_MAX=1000
# File upload rate limit (uploads per minute)
UPLOAD_RATE_LIMIT=10

# ============================================================================
# LOGGING
# ============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
# Enable access logging to file
LOG_TO_FILE=true

# ============================================================================
# WINDOWS-SPECIFIC CONFIGURATION
# ============================================================================
# PowerShell execution policy bypass for development
POWERSHELL_BYPASS=true

# Git configuration for Windows
GIT_CLONE_TIMEOUT=30000